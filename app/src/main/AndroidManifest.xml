<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.MAU.erasmus.mau">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:debuggable="false">
        <activity
            android:name="com.MAU.erasmus.mau.Story_Activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.MAU.erasmus.mau.Loading_Activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.MAU.erasmus.mau.Third_Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.MAU.erasmus.mau.Menu_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.MAU.erasmus.mau.Level01"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.MAU.erasmus.mau.Level02"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.MAU.erasmus.mau.Level03"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.MAU.erasmus.mau.Level04"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.MAU.erasmus.mau.Lose_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.MAU.erasmus.mau.Win_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.MAU.erasmus.mau.Options_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.MAU.erasmus.mau.Levels_Activity"
            android:screenOrientation="portrait" />
    </application>

</manifest>